<div class="container mt-4">
  <h1>Modifier l'événement</h1>

  <%= form_with model: @event, local: true do |f| %>

    <% if @event.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@event.errors.count, "erreur a empêché", "erreurs ont empêché") %> cet événement d'être sauvegardé :</p>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :title, "Titre", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :start_date, "Date de début", class: "form-label" %>
      <%= f.datetime_field :start_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :duration, "Durée (minutes)", class: "form-label" %>
      <%= f.number_field :duration, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :price, "Prix (€)", class: "form-label" %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :location, "Lieu", class: "form-label" %>
      <%= f.text_field :location, class: "form-control" %>
    </div>

    <%= f.submit "Mettre à jour l'événement", class: "btn btn-primary" %>
    <%= link_to "Annuler", event_path(@event), class: "btn btn-secondary ms-2" %>

  <% end %>
</div>
