<div class="container mt-4" style="max-width: 500px;">
  <h1>Modifier mon profil</h1>

  <%= form_with model: @user, local: true, html: { multipart: true } do |f| %>

    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :first_name, "PrÃ©nom", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, "Nom", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar, "Photo de profil", class: "form-label" %>
      <% if @user.avatar.attached? %>
        <div class="mb-2">
          <%= image_tag @user.avatar, class: "rounded-circle", style: "width: 60px; height: 60px; object-fit: cover;" %>
          <small class="text-muted ms-2">Photo actuelle</small>
        </div>
      <% end %>
      <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
    </div>

    <%= f.submit "Sauvegarder", class: "btn btn-primary" %>
    <%= link_to "Annuler", user_path(@user), class: "btn btn-secondary ms-2" %>

  <% end %>
</div>
